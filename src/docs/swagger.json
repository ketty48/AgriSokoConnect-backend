{
  "swagger": "2.0",
  "info": {
    "title": "AgriSokoConnect",
    "description": "This is the API Specification for the AgriSokoConnect platform backend server.",
    "contact": {
      "email": "ketymagnifique@gmail.com"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    },
    "version": "1.0.0"
  },
  "externalDocs": {
    "description": "Get source code",
    "url": "https://github.com/ketty48/financial_tracking.git"
  },
  "basePath": "/",
  "servers": [
    {
      "url": "http://localhost:8060",
      "description": "Local server"
    },
    {
      "url": "https://AgriSokoConnect.onrender.com",
      "description": "Production server"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "paths": {
    "/AgriSoko/user/signup": {
      "post": {
        "summary": "Create account",
        "description": "Create a new account",
        "tags": ["Authentication"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/account"
            },
            "required": true,
            "description": "Account object"
          }
        ],
        "responses": {
          "201": {
            "description": "Account created"
          }
        }
      }
    },

    "/AgriSoko/user/verify": {
      "post": {
        "summary": "Verify",
        "description": "Verify your account",
        "tags": ["Authentication"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/otp"
            },
            "required": true,
            "description": "Credentials object"
          }
        ],
        "responses": {
          "200": {
            "description": "Account Verfied"
          }
        }
      }
    },
    "/AgriSoko/user/signin": {
      "post": {
        "summary": "Login",
        "description": "Login to the application",
        "tags": ["Authentication"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/login"
            },
            "required": true,
            "description": "Credentials object"
          }
        ],
        "responses": {
          "200": {
            "description": "Login successful"
          }
        }
      }
    },
  
    "/AgriSoko/user/forgotPassword": {
      "post": {
        "summary": "Forgot password",
        "description": "Forgot password",
        "tags": ["Authentication"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/forgot"
            },
            "required": true,
            "description": "Credentials object"
          }
        ],
        "responses": {
          "200": {
            "description": "Login successful"
          }
        }
      }
    },
    "/AgriSoko/user/resetPassword": {
      "post": {
        "summary": "Reset",
        "description": "Reset Password",
        "tags": ["Authentication"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/reset"
            },
            "required": true,
            "description": "Credentials object"
          }
        ],
        "responses": {
          "200": {
            "description": "Reset Password successfully"
          }
        }
      }
    },
    "/AgriSoko/profile/info": {
      "get": {
        "summary": "your profile",
        "description": "your profile",
        "tags": ["Profile"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "query",
            "name": "id",
            "schema": {
              "$ref": "#/definitions/profile"
            },
            "required": true,
            "description": "profile object"
          }
        ],
        "responses": {
          "201": {
            "description": "profile updated successfully"
          }
        }
      }
    },
    "/AgriSoko/profile/update": {
      "put": {
        "summary": "update your profile",
        "description": "update your profile",
        "tags": ["Profile"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/profile"
            },
            "required": true,
            "description": "profile object"
          }
        ],
        "responses": {
          "201": {
            "description": "profile updated"
          }
        }
      }
    }
  },
  "definitions": {
    "account": {
      "type": "object",
      "properties": {
        "fullName": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "userName": {
          "type": "string"
        },
        "password": {
          "type": "string",
          "minLength": 6
        },
        "confirmPassword": {
          "type": "string"
        },
      
        "address1": {
          "type": "string"
        },
        "PhoneNumber": {
          "type": "number"
        },
        "role": {
          "type": "string",
          "enum": ["goverment", "farmer", "buyer"],
          "default": "farmer"
        }
        
      },
      "required": ["fullName","email","userName", "password","confirmPassword","address1","phoneNumber","role"]
    },

    "otp": {
      "type": "object",
      "properties": {
        "otp": {
          "type": "number"
        }
      },
      "required": ["otp"]
    },
    "login": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "required": ["email","password"]
    },
    "forgot": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        }
      },
      "required": ["email"]
    },
    "reset": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string"
        },
        "id":{
          "type": "string"
        },

        "password": {
          "type": "string"
        }
      },
      "required": ["token", "password"]
    },
    "profile": {
      "type": "object",
      "properties": {
        "fullName": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
      
        "address1": {
          "type": "string"
        },
        "address2": {
          "type": "string"
        },
        "PhoneNumber": {
          "type": "number"
        }
  
        
      },
      "required": ["fullName","email","address1","address2","phoneNumber","role"]
    }

  },
  "securityDefinitions": {
    "BearerAuth": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  }
}
