  "definitions": {
    "account": {
      "type": "object",
      "properties": {
        "fullName": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
    
        "password": {
          "type": "string",
          "minLength": 6
        },
        "confirmPassword": {
          "type": "string"
        },
      
      
        "PhoneNumber": {
          "type": "number"
        },
        "role": {
          "type": "string",
          "enum": ["goverment", "farmer", "buyer"],
          "default": "farmer"
        }
        
      },
      "required": ["fullName","email", "password","confirmPassword","phoneNumber","role"]
    },

    "otp": {
      "type": "object",
      "properties": {
        "otp": {
          "type": "number"
        }
      },
      "required": ["otp"]
    },
    "login": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "required": ["email","password"]
    },
    "forgot": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        }
      },
      "required": ["email"]
    },
    "reset": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string"
        },
        "id":{
          "type": "string"
        },

        "password": {
          "type": "string"
        }
      },
      "required": ["token", "password"]
    },
    "profile": {
      "type": "object",
      "properties": {
        "fullName": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
      
        "address1": {
          "type": "string"
        },
        "address2": {
          "type": "string"
        },
        "PhoneNumber": {
          "type": "number"
        }
  
        
      },
      "required": ["fullName","email","address1","address2","phoneNumber","role"]
    },
    
    "stock": {
      "type": "object",
      "properties": {
        "NameOfProduct": {
          "type": "string",
          "description": "Name of the product"
        },
        "Description": {
          "type": "string",
          "description": "Description of the product"
        },
        "pricePerTon": {
          "type": "number",
          "description": "Price per ton of the product"
        },
        "quantity": {
          "type": "number",
          "description": "Quantity of the product"
        },
        "totalPrice": {
          "type": "number",
          "description": "Total price of the stock (pricePerTon * quantity)"
        },
        "user": {
          "type": "string",
          "description": "ID of the user who owns the stock"
        }
      },
      "required": ["NameOfProduct", "Description", "pricePerTon", "quantity", "user"]
    },
    "OrderCreate": {
      "type": "object",
      "properties": {
        "selectedStockItems": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/SelectedStockItem"
          },
          "description": "Array of selected stock items"
        },
        "phoneNumber": {
          "type": "string",
          "description": "Phone number of the customer"
        },
        "shippingAddress": {
          "type": "string",
          "description": "Shipping address of the order"
        }
      },
      "required": ["selectedStockItems","phoneNumber", "shippingAddress"]
    },
    "SelectedStockItem": {
      "type": "object",
      "properties": {
        "NameOfProduct": {
          "type": "string",
          "description": "Name of the product"
        },
        "quantity": {
          "type": "number",
          "description": "The quantity you will receive"
        }
      },
      "required": ["NameOfProduct", "quantity"]
    },
 
  "contactCreate":{
   "type" : "object",
    "properties":{
    "names":{
        "type": "string"
    },
      "email":{
        "type": "string"
      },
      "phoneNumber":{
        "type":"string"
      }, 
      "subject":{
        "type":"string"
      },
      "message":{
        "type":"string"
      }},
    "required":["names","email","phoneNumber","subject","message"]
    }},
  "securityDefinitions": {
    "BearerAuth": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  }}
  