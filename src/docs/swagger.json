  },
  "basePath": "/",
  "servers": [
    {
      "url": "http://localhost:8060",
      "description": "Local server"
    },
    {
      "url": "https://AgriSokoConnect.onrender.com",
      "description": "Production server"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "paths": {
    "/AgriSoko/user/signup": {
      "post": {
        "summary": "Create account",
        "description": "Create a new account",
        "tags": ["Authentication"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/account"
            },
            "required": true,
            "description": "Account object"
          }
        ],
        "responses": {
          "201": {
            "description": "Account created"
          }
        }
      }
    },

    "/AgriSoko/user/verify": {
      "post": {
        "summary": "Verify",
        "description": "Verify your account",
        "tags": ["Authentication"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/otp"
            },
            "required": true,
            "description": "Credentials object"
          }
        ],
        "responses": {
          "200": {
            "description": "Account Verfied"
          }
        }
      }
    },
    "/AgriSoko/user/signin": {
      "post": {
        "summary": "Login",
        "description": "Login to the application",
        "tags": ["Authentication"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/login"
            },
            "required": true,
            "description": "Credentials object"
          }
        ],
        "responses": {
          "200": {
            "description": "Login successful"
          }
        }
      }
    },
  
    "/AgriSoko/user/forgotPassword": {
      "post": {
        "summary": "Forgot password",
        "description": "Forgot password",
        "tags": ["Authentication"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/forgot"
            },
            "required": true,
            "description": "Credentials object"
          }
        ],
        "responses": {
          "200": {
            "description": "Login successful"
          }
        }
      }
    },
    "/AgriSoko/user/resetPassword": {
      "post": {
        "summary": "Reset",
        "description": "Reset Password",
        "tags": ["Authentication"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/reset"
            },
            "required": true,
            "description": "Credentials object"
          }
        ],
        "responses": {
          "200": {
            "description": "Reset Password successfully"
          }
        }
      }
    },
    "/AgriSoko/user/auth/google":{
      "get": {
        "summary": "Google OAuth2.0 authentication",
        "description": "Authenticate with Google",
        "tags": ["Authentication"],
        "responses": {
          "200": {
            "description": "Redirect to Google login page"
           }
        }
      }
    },
    "/AgriSoko/user/auth/google/callback": {
      "get": {
        "summary": "Google OAuth2.0 callback",
        "description": "Callback endpoint for Google OAuth2.0 authentication",
        "tags": ["Authentication"],
        "responses": {
          "200": {
            "description": "Redirect to dashboard upon successful authentication"
          }
        }
      }
    },
    "/AgriSoko/user/role":{
      "get": {
        "summary": "Get roles",
        "description": "Get All roles",
        "tags": ["Roles"],
    
        "responses": {
          "200": {
            "description": "roles Fetched successfully"
          },
          "404": {
            "description": "Error for fetching roles"
          }
        }
      }
    },
    "/AgriSoko/profile/info": {
      "get": {
        "summary": "your profile",
        "description": "your profile",
        "tags": ["Profile"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "query",
            "name": "id",
            "schema": {
              "$ref": "#/definitions/profile"
            },
            "required": true,
            "description": "profile object"
          }
        ],
        "responses": {
          "201": {
            "description": "profile updated successfully"
          }
        }
      }
    },
    "/AgriSoko/profile/update": {
      "put": {
        "summary": "update your profile",
        "description": "update your profile",
        "tags": ["Profile"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/profile"
            },
            "required": true,
            "description": "profile object"
          }
        ],
        "responses": {
          "201": {
            "description": "profile updated"
          }
        }
      }
    },
 
    "/AgriSoko/stock/add": {
      "post":{
        "summary": "create stock",
        "description": "create stock",
        "tags": ["Stock"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/stock"
            },
            "required": true,
            "description": "stock object"
          }
        ],
        "responses": {
          "201": {
            "description": "stock created"
          }
        }
      }
    },
    "/AgriSoko/stock/retrieve":{
    "get": {
      "summary": "Get all stocks",
      "description": "Retrieve all stocks",
      "tags": ["Stock"],
      "security": [
        {
          "BearerAuth": []
        }
      ],
      "responses": {
        "200": {
          "description": "Successful operation",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/Stock"
                }
              }
            }
          }
        }
      }
    }},
    "/AgriSoko/stock/retrieve/{id}":{
      "get": {
        "summary": "Get stock by ID",
        "description": "Retrieve details of a specific stock by its ID",
        "tags": ["Stock"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "type": "string",
            "required": true,
            "description": "ID of the stock to retrieve"
          }
        ],
        "responses": {
          "200": {
            "description": "Stock found",
            "schema": {
              "$ref": "#/definitions/stock"
            }
          },
          "404": {
            "description": "Stock not found"
          }
        }
      }
    }
,
    "/AgriSoko/stock/update/{id}":{
      "put": {
        "summary": "Update stock",
        "description": "Update existing stock details",
        "tags": ["Stock"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "type": "string",
            "required": true,
            "description": "ID of the stock to be updated"
          },
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/stock"
            },
            "required": true,
            "description": "Updated stock object"
          }
        ],
        "responses": {
          "200": {
            "description": "Stock updated successfully"
          },
          "404": {
            "description": "Stock not found"
          },
          "400": {
            "description": "Bad request: Invalid data provided"
          }
        }
      }
    },
    "/AgriSoko/stock/delete/{id}":{
      "delete": {
        "summary": "Delete stock",
        "description": "Delete an existing stock by its ID",
        "tags": ["Stock"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "type": "string",
            "required": true,
            "description": "ID of the stock to be deleted"
          }
        ],
        "responses": {
          "200": {
            "description": "Stock deleted successfully"
          },
          "404": {
            "description": "Stock not found"
          }
        }
      }
    }
  },
  "definitions": {
    "account": {
      "type": "object",
      "properties": {
        "fullName": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
    
        "password": {
          "type": "string",
          "minLength": 6
        },
        "confirmPassword": {
          "type": "string"
        },
      
      
        "PhoneNumber": {
          "type": "number"
        },
        "role": {
          "type": "string",
          "enum": ["goverment", "farmer", "buyer"],
          "default": "farmer"
        }
        
      },
      "required": ["fullName","email", "password","confirmPassword","phoneNumber","role"]
    },

    "otp": {
      "type": "object",
      "properties": {
        "otp": {
          "type": "number"
        }
      },
      "required": ["otp"]
    },
    "login": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "required": ["email","password"]
    },
    "forgot": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        }
      },
      "required": ["email"]
    },
    "reset": {
      "type": "object",
      "properties": {
        "token": {
          "type": "string"
        },
        "id":{
          "type": "string"
        },

        "password": {
          "type": "string"
        }
      },
      "required": ["token", "password"]
    },
    "profile": {
      "type": "object",
      "properties": {
        "fullName": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
      
        "address1": {
          "type": "string"
        },
        "address2": {
          "type": "string"
        },
        "PhoneNumber": {
          "type": "number"
        }
  
        
      },
      "required": ["fullName","email","address1","address2","phoneNumber","role"]
    },
    "stock": {
      "type": "object",
      "properties": {
        "NameOfProduct": {
          "type": "string",
          "description": "Name of the product"
        },
        "Description": {
          "type": "string",
          "description": "Description of the product"
        },
        "pricePerTon": {
          "type": "number",
          "description": "Price per ton of the product"
        },
        "quantity": {
          "type": "number",
          "description": "Quantity of the product"
        },
        "totalPrice": {
          "type": "number",
          "description": "Total price of the stock (pricePerTon * quantity)"
        },
        "user": {
          "type": "string",
          "description": "ID of the user who owns the stock"
        }
      },
      "required": ["NameOfProduct", "Description", "pricePerTon", "quantity", "user"]
    }

  },
  "securityDefinitions": {
    "BearerAuth": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  }
}
