    "/AgriSoko/stock/add":{
    "post":{
      "summary": "Create stock",
      "description": "Create new stock entry",
      "tags": ["Stock"],
      "security": [{"BearerAuth": []}],
      "consumes": ["multipart/form-data"],
      "parameters": [
        {
          "in": "formData",
          "name": "NameOfProduct",
          "type": "string",
          "required": true,
          "description": "Name of the product"
        },
        {
          "in": "formData",
          "name": "description",
          "type": "string",
          "required": true,
          "description": "Description of the product"
        },
        {
          "in": "formData",
          "name": "pricePerTon",
          "type": "number",
          "required": true,
          "description": "Price per ton of the product"
        },
        {
          "in": "formData",
          "name": "quantity",
          "type": "integer",
          "required": true,
          "description": "Quantity of the product"
        },
        {
          "in": "formData",
          "name": "typeOfProduct",
          "type": "string",
          "required": true,
          "description": "Type of the product"
        },
        {
          "in": "formData",
          "name": "image",
          "type": "file",
          "required": true,
          "description": "Image file associated with the stock"
        }
      ],
      "responses": {
        "201": {
          "description": "Stock created successfully"
        }
      }
    }},
    
